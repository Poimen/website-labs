{
  "name": "tailwindcss_reactjs_helloworld",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.2"
  },
  "scripts": {
    "build:css": "postcss src/assets/tailwind.css -o src/assets/base.css",
